<div id="home">
  <!-- Start cSlider -->
  <div id="da-slider" class="da-slider">
    <div class="triangle"></div>
    <!-- mask elemet use for masking background image -->
    <div class="mask">
      <%= image_tag 'Slider01.jpeg' %>
    </div>
    <!-- All slides centred in container element -->
    <div class="container">
      <!-- Start first slide -->
      <div class="da-slide">
        <h4>CREATE ADVENTURE FOR YOURSELF</h4>

        <h2 class="fittext2">TRAVEL WITH NO HASSLE</h2>
        <a href="#HowItWorkPopup" id="HowItWorkButton" class="da-link button howItWork">HOW IT WORKS</a>

        <div class="da-img">
        </div>
        <div class="pickBar">
                        <span id="pick">
                        <select id="train_station" name="train_station">
                          <option value="1">TRAIN STATION</option>
                        </select>
                        <select id="arrival_date" name="arrival_date">
                          <option value="1">ARRIVAL DATE</option>
                        </select>
                          <%= link_to "LET'S PICK", new_order_path, id: "pickButton", class: "button" %>
                        </span>
        </div>
      </div>
    </div>
    <!-- End first slide -->
  </div>
</div>
</div>
<!-- End home section -->
<!-- Service section start -->
<div class="section primary-section" id="service">
  <div class="container">
    <!-- Start title section -->
    <div class="title">
      <h1>What We Do?</h1>
      <!-- Section's title goes here -->
      <p>A platform that rents out daily essentials so you can move baggage-free and enjoy superior travel
        experience.</p>
      <!--Simple description for section goes here. -->
    </div>
    <div class="row-fluid">
      <div class="span4">
        <div class="centered service">
          <div class="circle-border zoom-in">
            <%= image_tag 'Service1.png', class: 'img-circle' %>

          </div>
          <h3>No Preparation</h3>

          <p>No hassle with packing your bags before your trip</p>
        </div>
      </div>
      <div class="span4">
        <div class="centered service">
          <div class="circle-border zoom-in">
            <%= image_tag 'Service2.png', class: 'img-circle' %>

          </div>
          <h3>No Luggage</h3>

          <p>No need to carry your heavy luggage across prefectures</p>
        </div>
      </div>
      <div class="span4">
        <div class="centered service">
          <div class="circle-border zoom-in">
            <%= image_tag 'Service3.png', class: 'img-circle' %>

          </div>
          <h3>Save Time</h3>

          <p>More time to enjoy the unique experiences in each prefectures</p>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="HowItWorkPopup" class="mfp-hide">
  <%= image_tag 'How_it_works.png' %>

</div>
<!-- Service section end -->
<div class="section secondary-section">
  <div class="triangle"></div>
  <div class="container centered">
    <p class="large-text">Enjoy superior travel experience.</p>
  </div>
</div>
